CXXFLAGS_c++98/concept-inst.o      += -D_GLIBCXX_CONCEPT_CHECKS -fimplicit-templates
CXXFLAGS_c++98/concept-inst.s.o    += -D_GLIBCXX_CONCEPT_CHECKS -fimplicit-templates
CXXFLAGS_c++98/locale_init.o       += -std=gnu++11
CXXFLAGS_c++98/locale_init.s.o     += -std=gnu++11
CXXFLAGS_c++98/localename.o        += -std=gnu++11
CXXFLAGS_c++98/localename.s.o      += -std=gnu++11
PRIVATE_INCDIR_c++98/strstream.o   += $(STDCXX_CONTRIB_DIR)/include/backward
PRIVATE_INCDIR_c++98/strstream.s.o += $(STDCXX_CONTRIB_DIR)/include/backward
CXXFLAGS_c++98/strstream.o         += -Wno-deprecated
CXXFLAGS_c++98/strstream.s.o       += -Wno-deprecated


CXXFLAGS_c++11/hashtable_c++0x.o   += -fimplicit-templates
CXXFLAGS_c++11/hashtable_c++0x.s.o += -fimplicit-templates

# not all code is C++11
SRC_CC_IS_CXX11 :=
CXXFLAGS        += $(if $(filter c++11/%,$@),-std=gnu++11)
CXXFLAGS        += $(if $(filter c++98/%,$@),-std=gnu++98)

# -Wmissing-declarations triggers
WARNINGS = $(WARNINGS_MINIMAL)

# Use atomicity.cc if the compiler does not support C++11 atomics
SRC_CC       += $(if $(GCC_HAS_ATOMICS),,atomicity.cc)

vpath %.cc $(STDCXX_CONTRIB_DIR)/config/os/generic

$(OBJ_DIR)/atomicity.cc: $(call CPU_file,atomicity_mutex/atomicity.h)
	$(VERBOSE)$(LN) -sf $< $@

$(OBJ_DIR)/c++98/basic_file.cc: $(STDCXX_CONTRIB_DIR)/config/io/basic_file_stdio.cc
	$(VERBOSE)$(MKDIR) $(@D)
	$(VERBOSE)$(LN) -sf $< $@

$(OBJ_DIR)/c++98/collate_members_cow.cc: $(STDCXX_CONTRIB_DIR)/config/locale/generic/collate_members.cc
	$(VERBOSE)$(MKDIR) $(@D)
	$(VERBOSE)$(LN) -sf $< $@

$(OBJ_DIR)/c++98/messages_members_cow.cc: $(STDCXX_CONTRIB_DIR)/config/locale/generic/messages_members.cc
	$(VERBOSE)$(MKDIR) $(@D)
	$(VERBOSE)$(LN) -sf $< $@

$(OBJ_DIR)/c++98/monetary_members_cow.cc: $(STDCXX_CONTRIB_DIR)/config/locale/generic/monetary_members.cc
	$(VERBOSE)$(MKDIR) $(@D)
	$(VERBOSE)$(LN) -sf $< $@

$(OBJ_DIR)/c++98/numeric_members_cow.cc: $(STDCXX_CONTRIB_DIR)/config/locale/generic/numeric_members.cc
	$(VERBOSE)$(MKDIR) $(@D)
	$(VERBOSE)$(LN) -sf $< $@
