CXXFLAGS_c++98/collate_members_cow.o    += -D_GLIBCXX_USE_CXX11_ABI=0 -fimplicit-templates
CXXFLAGS_c++98/collate_members_cow.s.o  += -D_GLIBCXX_USE_CXX11_ABI=0 -fimplicit-templates
CXXFLAGS_c++98/messages_members_cow.o   += -D_GLIBCXX_USE_CXX11_ABI=0 -fimplicit-templates
