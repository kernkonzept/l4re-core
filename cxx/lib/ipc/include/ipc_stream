namespace L4 { namespace Ipc {
/**
 * Read a value out of a stream.
 *
 * \param s  An Istream.
 * \return The value of type `T`.
 *
 * The stream position is progressed accordingly.
 */
template< typename T >
inline
T read(Istream &s) { T t; s >> t; return t; }

} // namespace Ipc
} // namespace L4
