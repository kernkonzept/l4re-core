#pragma once

namespace Ldr {

class Stack
{
public:
  virtual char *push_object(void const *src, unsigned long size) = 0;

  template< typename T >
  T *push(T const &v)
  { return reinterpret_cast<T*>(push_object(&v, sizeof(T))); }

  virtual ~Stack() {}
};

}
